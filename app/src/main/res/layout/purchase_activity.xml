<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For $1.99, You can enjoy a fast ad-free app."
        android:padding="15dp"
        android:id="@+id/removeAdsMessage"
        android:textSize="20sp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/removeAdsBtn"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/textBg"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/removeAdsBtn"
        android:text="@string/remove_ads"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/button_background_our_joke"
        android:textColor="@color/white"
        />

</RelativeLayout>